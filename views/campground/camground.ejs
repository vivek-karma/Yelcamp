<% include ../partials/header %>

<div class="container">

        <header class="jumbotron">
            <div class="container text-center" >
                    <h1><strong>Welcome to YelpCamp !!!</strong></h1>
                    <h3>Have a look at Our Campgrounds</h3>
                    <p>
                            <a class ="btn btn-large btn-success" href="/addnew">Add New Campground</a>
                    </p>
            </div>
              </header>



        <div class="row ">
            <div class="col-mid-12" style="text-align:center"><h1>This is our Best Collection for You...</h1> </div>
        </div>

            <div class ="row text-center" style="display:flex; flex-wrap:wrap" >

            <% camgrounds.forEach(function(camground){ %>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="img-thumbnail img-fluid">

                            <img src="<%=camground.img%>" width="100%" height="100%" >
                            <div class="caption"> <h4><%= camground.name%></h4> </div>
                            <div class="caption"> <h6><em>Created By :</em> <%= camground.author.username%></h6> </div>

                            <div>
                                 <a class="btn btn-primary btn-sm" href="/camgrounds/<%=camground._id%>">More Info</a>
                            </div>


                    </div>


                </div>
                <% })%>
            </div>
        </div>



</div>



<% include ../partials/footer %>
